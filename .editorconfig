# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
# for isort
profile = black
length_sort = true

[*.{yaml,yml,json}]
indent_style = space
indent_size = 2

[{Makefile,*.mk,*.go}]
indent_style = tab

[*.go]
tab_width = 4
